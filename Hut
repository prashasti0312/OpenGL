#include<GL/glut.h>
#include<GL/gl.h>
#include<iostream>
using namespace std;
void init()
{
glClearColor(0.0,0.0,1.0,1.0); 
glMatrixMode(GL_PROJECTION);
gluOrtho2D(0,700,0,700);
}
void display()
{
glColor3f(0.0,0.0,0.0);
glBegin(GL_POLYGON);
glVertex2i(0,0);
glVertex2i(700,0);
glVertex2i(700,100);
glVertex2i(0,100);
glEnd();
glColor3f(0.1,0.7,0.16);
glBegin(GL_POLYGON);
glVertex2i(100,100);
glVertex2i(250,100);
glVertex2i(250,300);
glVertex2i(100,300);
glEnd();
glColor3f(0.6,0.0,0.0);
glBegin(GL_POLYGON);
glVertex2i(145,100);
glVertex2i(205,100);
glVertex2i(205,220);
glVertex2i(145,220);
glEnd();
glColor3f(0.6,0.5,0.16);
glBegin(GL_POLYGON);
glVertex2i(100,300);
glVertex2i(250,300);
glVertex2i(175,500);
glEnd();
glFlush();
}
void myMouse(int button, int state, int x, int y) 
{
if (button == GLUT_LEFT_BUTTON && state == GLUT_DOWN)
{
glColor3f(0.0,0.0,0.0);
glBegin(GL_POLYGON);
glVertex2i(0,0);
glVertex2i(700,0);
glVertex2i(700,100);
glVertex2i(0,100);
glEnd();
glColor3f(0.16,0.16,0.20);
glBegin(GL_POLYGON);
glVertex2i(100,100);
glVertex2i(250,100);
glVertex2i(250,300);
glVertex2i(100,300);
glEnd();
glColor3f(0.0,0.5,0.0);
glBegin(GL_POLYGON);
glVertex2i(145,100);
glVertex2i(205,100);
glVertex2i(205,220);
glVertex2i(145,220);
glEnd();
glColor3f(0.9,0.2,0.7);
glBegin(GL_POLYGON);
glVertex2i(100,300);
glVertex2i(250,300);
glVertex2i(175,500);
glEnd();
glFlush();	
}
}
int main(int argc,char **argv)
{
glutInit(&argc,argv);
glutInitDisplayMode(GLUT_SINGLE|GLUT_RGB);
glutInitWindowSize(700,700);
glutCreateWindow("Hut");
init();
glutDisplayFunc(display);
glutMouseFunc(myMouse);
glutMainLoop();
}
